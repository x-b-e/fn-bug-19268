<div>
  Foo is <span id="foo">{{@foo}}</span>
</div>

{{#if @incrementFoo}}
  <button
    type="button"
    {{on "click" @incrementFoo}}
  >
    Increment Foo
  </button>
{{/if}}

<div
  {{did-insert (fn this.squareFoo @foo)}}
  {{did-update (fn this.squareFoo @foo)}}
>
  Foo squared is
  <span id="foo-squared">
    {{this.fooSquared}}
  </span>.
</div>

<div
  {{did-insert (perform this.cubeFooTask @foo)}}
  {{did-update (perform this.cubeFooTask @foo)}}
>
  Foo cubed is
  <span id="foo-cubed">
    {{this.fooCubed}}
  </span>.
</div>

<div>
  Foo negative is
  <span id="foo-negative">
    {{compute (fn this.negatizeFoo @foo)}}
  </span>
</div>
